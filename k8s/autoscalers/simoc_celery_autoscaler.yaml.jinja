apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: simoc-celery-autoscaler
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: simoc-celery-cluster
  minReplicas: {{ min_celery_replicas }}
  maxReplicas: {{ max_celery_replicas }}
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 50
  - type: Resource
    resource:
      name: memory
      target:
        type: Utilization
        averageUtilization: 50
